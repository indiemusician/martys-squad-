# ==============================================
# CONFIGURATION ENVIRONNEMENT - MARTY'S SQUAD
# ==============================================

# ----------------------------------------------
# ANTHROPIC (Claude API)
# ----------------------------------------------
# Obtenir une clé API sur : https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------
# TWILIO (WhatsApp)
# ----------------------------------------------
# Obtenir sur : https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=whatsapp:+14155238886

# URL pour valider les signatures Twilio (sécurité)
TWILIO_WEBHOOK_URL=https://ton-domaine.com/api/webhooks/twilio

# ----------------------------------------------
# DATABASE (PostgreSQL)
# ----------------------------------------------
# Supabase : https://supabase.com/
# Ou Neon : https://neon.tech/
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Connection pooling (optionnel, pour production)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ----------------------------------------------
# REDIS (Sessions & Cache)
# ----------------------------------------------
# Upstash : https://upstash.com/
REDIS_URL=redis://default:xxxxx@xxxx.upstash.io:6379

# ----------------------------------------------
# VECTOR STORE (Knowledge Base)
# ----------------------------------------------
# Pinecone : https://www.pinecone.io/
# Ou Supabase Vector : https://supabase.com/vector
PINECONE_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=indie-musician-knowledge

# Alternative : Supabase Vector
# SUPABASE_VECTOR_ENABLED=true

# ----------------------------------------------
# AUTHENTICATION (NextAuth.js)
# ----------------------------------------------
# Générer avec : openssl rand -base64 32
NEXTAUTH_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXTAUTH_URL=http://localhost:3000

# En production
# NEXTAUTH_URL=https://indiemusician.fr

# ----------------------------------------------
# ADMIN DASHBOARD
# ----------------------------------------------
# Mot de passe pour accéder à /admin
ADMIN_PASSWORD=ton_mot_de_passe_securise

# Email admin (pour notifications)
ADMIN_EMAIL=clem@indiemusician.fr

# ----------------------------------------------
# RATE LIMITING
# ----------------------------------------------
# Limite messages par élève
RATE_LIMIT_MAX_MESSAGES=50
RATE_LIMIT_WINDOW_MS=3600000  # 1 heure en ms

# ----------------------------------------------
# FEATURES FLAGS
# ----------------------------------------------
# Activer/désactiver certaines fonctionnalités
ENABLE_WEB_CHAT=true
ENABLE_WHATSAPP=true
ENABLE_ANALYTICS=true
ENABLE_KNOWLEDGE_BASE_RAG=true

# Mode debug (logs détaillés)
DEBUG_MODE=false

# ----------------------------------------------
# INDIE MUSICIAN BRANDING
# ----------------------------------------------
INDIE_MUSICIAN_URL=https://indiemusician.fr
INDIE_MUSICIAN_CONTACT_EMAIL=clem@indiemusician.fr

# ----------------------------------------------
# MONITORING & LOGS
# ----------------------------------------------
# Sentry (optionnel, pour tracking erreurs)
# SENTRY_DSN=https://xxxx@xxxx.ingest.sentry.io/xxxxx

# LogTail ou autre service de logs
# LOGTAIL_SOURCE_TOKEN=xxxxxxxxxxxxxxxxxx

# ----------------------------------------------
# DEPLOYMENT
# ----------------------------------------------
# Environment : development | staging | production
NODE_ENV=development

# Port pour le serveur local
PORT=3000

# ----------------------------------------------
# NOTES
# ----------------------------------------------
# 1. Copie ce fichier : cp config/example.env .env.local
# 2. Remplis toutes les valeurs marquées xxxxx
# 3. Ne commit JAMAIS .env.local dans git
# 4. Pour la production, utilise les secrets de ton provider
#    (Vercel, Railway, etc.)
